<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
       android:id="@+id/txtTitulo"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="25dp"
       android:text="@string/app_name"
       android:textSize="30sp" />

   <com.facebook.widget.LoginButton
       android:id="@+id/login_button"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/txtSaludo"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="47dp"
       fb:login_text="Entra con Facebook"
       fb:logout_text="Salir" />

   <TextView
       android:id="@+id/txtCraft"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBaseline="@+id/button1"
       android:layout_alignBottom="@+id/button1"
       android:layout_alignParentLeft="true"
       android:layout_marginLeft="16dp"
       android:text="@string/craftlover"
       android:textSize="30sp" />

   <Button
       android:id="@+id/button1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/login_button"
       android:layout_marginLeft="18dp"
       android:layout_marginTop="37dp"
       android:background="@drawable/custom_button"
       android:layout_toRightOf="@+id/txtCraft"
       android:text="@string/empezar"
       android:textColor="#FAFAFA" />

   <TextView
       android:id="@+id/txtSaludo"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/txtTitulo"
       android:layout_centerHorizontal="true"
       android:text="@string/saludo"
       android:textSize="15sp" />

</RelativeLayout>
